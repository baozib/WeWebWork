<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <!--登入-->
    <servlet>
        <servlet-name>LoginPage</servlet-name>
        <servlet-class>com.baozi.web.input.LoginPage</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoginPage</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <!--注册-->
    <servlet>
        <servlet-name>RegisterPage</servlet-name>
        <servlet-class>com.baozi.web.input.RegisterPage</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>RegisterPage</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <!--用户界面映射-->
    <servlet>
        <servlet-name>IndexPage</servlet-name>
        <servlet-class>com.baozi.web.input.IndexPage</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>IndexPage</servlet-name>
        <url-pattern>/indexpage</url-pattern>
    </servlet-mapping>
    <!--管理员界面映射-->
    <servlet>
        <servlet-name>MangerPage</servlet-name>
        <servlet-class>com.baozi.web.input.MangerPage</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MangerPage</servlet-name>
        <url-pattern>/manger-page</url-pattern>
    </servlet-mapping>
    <!--初始操作-->
    <servlet>
        <servlet-name>PublicServle</servlet-name>
        <servlet-class>com.baozi.web.handle.PublicServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PublicServle</servlet-name>
        <url-pattern>/go/bz_initial</url-pattern>
    </servlet-mapping>
    <!--管理员操作-->
    <servlet>
        <servlet-name>ManagerServlet</servlet-name>
        <servlet-class>com.baozi.web.handle.ManagerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ManagerServlet</servlet-name>
        <url-pattern>/go/bz_manager</url-pattern>
    </servlet-mapping>
    <!--捐赠者操作-->
    <servlet>
        <servlet-name>DonorServlet</servlet-name>
        <servlet-class>com.baozi.web.handle.DonorServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DonorServlet</servlet-name>
        <url-pattern>/go/bz_donor</url-pattern>
    </servlet-mapping>
</web-app>